"use strict";

function printForecast(arr) {
  let forecast = "";
  for (let i = 0; i < arr.length; i++) {
    forecast += `... ${arr[i]}Â°C in ${i + 1} days `;
  }
  console.log(forecast);
}

function getInput() {
  const len = Number(prompt("Give length of array: "));
  const test = [];
  for (let i = 0; i < len; i++) {
    test[i] = Number(prompt(`Enter number ${i + 1}`));
  }
  printForecast(test);
}

getInput();
